<Page x:Class="WpfMarathon.Pages.VolunteerManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="VolunteerManagement">

    <Grid Background="white">
       
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="31"/>
            <RowDefinition Height="46"/>
            <RowDefinition Height="34"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="29"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="145.5"/>
            <ColumnDefinition Width="57.5"/>
            <ColumnDefinition Width="56.5"/>
            <ColumnDefinition Width="60.5"/>
            <ColumnDefinition Width="89.667"/>
            <ColumnDefinition Width="94.333"/>
            <ColumnDefinition Width="141.712"/>
            <ColumnDefinition Width="52*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions> 
        <!-- Верхняя панель с заголовком -->
        <DockPanel LastChildFill="False" Grid.ColumnSpan="11" Margin="0,0,0,26" Grid.RowSpan="4">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10">
                <Button x:Name="Back_btn" Content="Назад" Width="150" Height="55" FontSize="36" Margin="50,0,0,0" Click="Back_btn_Click" />
                <TextBlock Text="MARATHON SKILLS 2025" Foreground="White" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,20,0,20"/>
                <Button Content="Logout" Width="198" Height="55" FontSize="36" Margin="650,0,0,0"/>
            </StackPanel>
        </DockPanel>

        <TextBlock Margin="64,21,31,10" TextWrapping="Wrap" FontSize="44" Foreground="#FF6C6C6C" TextAlignment="Center" Grid.ColumnSpan="7" Grid.Column="2" Grid.Row="3" Grid.RowSpan="2"><Run Text="Управление "/><Run Text="волонтерами"/></TextBlock>
        <Button Name="btnAddVol" Content="Загрузка волонтеров" Margin="85,96,162,654" Background="#FFF2F2F2" FontFamily="Arial" FontSize="36" Foreground="Black"  Grid.Row="6" Grid.Column="7" Grid.ColumnSpan="3" Click="btnAddVol_Click" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>

        <ComboBox x:Name="cmbSort" Grid.Column="1" Margin="379,87,64,667" Grid.Row="6" FontSize="36" Text="Фамилии" Grid.ColumnSpan="6"/>
        <TextBlock Grid.Column="1" Margin="100,89,57,667" Grid.Row="6" TextWrapping="Wrap" Text="Сортировать по:" FontSize="36" TextAlignment="Right"/>
        <TextBlock Grid.Column="1" Margin="294,249,56,529" Grid.Row="6" TextWrapping="Wrap" FontSize="36" FontWeight="Bold" Grid.ColumnSpan="4"><Run Text="Всего "/><Run Text="волонтеров"/><Run Text=":"/></TextBlock>
        <TextBlock x:Name="txbCountUser" Grid.Column="4" Margin="3,242,0,529" Grid.Row="6" TextWrapping="Wrap" FontSize="36" Grid.ColumnSpan="4"/>

        <DataGrid x:Name="VolunteerDG" Grid.ColumnSpan="9" Margin="10,307,10,124" Grid.Row="6" Grid.Column="1" AutoGenerateColumns="False" SelectionMode="Single" SelectionUnit="FullRow" IsReadOnly="True" FontSize="36">
            <DataGrid.Columns>

                <DataGridTextColumn Header="Фамилия" Binding="{Binding Surname}" Width="1*"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding Name}"  Width="1*"/>
                <DataGridTextColumn Header="Страна" Binding="{Binding Country}" Width="1*"/>
                <DataGridTextColumn Header="Пол" Binding="{Binding Gender}" Width="*"/>


            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Margin="148,0,10,761" TextWrapping="Wrap" FontSize="36" Foreground="#FF6C6C6C" TextAlignment="Center" Grid.ColumnSpan="3" Grid.Column="1" Grid.Row="6" Text="Сортировка и фильтрация"/>
        <TextBlock Margin="21,40,185,723" TextWrapping="Wrap" FontSize="36" Foreground="#FF6C6C6C" TextAlignment="Center" Grid.ColumnSpan="2" Grid.Column="8" Grid.Row="6" Text="Загрузка"/>
        <Button x:Name="btnUpdate" Content="Обновить" Margin="380,176,16,594" Background="#FFF2F2F2" FontFamily="Arial" FontSize="36" Foreground="Black"  Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Click="btnUpdate_Click" >
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="7"/>
                </Style>
            </Button.Resources>
        </Button>





    </Grid>
</Page>
