        <Image x:Name="imgMed" Grid.Column="13" Margin="370,396,432,539" Grid.Row="12"/>
        <Image x:Name="imgInfo" Grid.Column="13" Margin="370,577,432,352" Grid.Row="12"/>

    </Grid>
</Page>
