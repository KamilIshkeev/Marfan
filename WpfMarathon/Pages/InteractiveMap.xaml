        <DockPanel Grid.ColumnSpan="14" Grid.Row="12" LastChildFill="False" Margin="0,0,0,949">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10">
                <Button x:Name="Back_btn" Content="Назад" Width="150" Height="55" FontSize="36" Margin="50,0,0,0" Click="Back_btn_Click" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock Text="MARATHON SKILLS 2025" Foreground="White" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,20,0,20"/>
            </StackPanel>
        </DockPanel>
        <TextBlock Margin="517,149,362,857" TextWrapping="Wrap" FontSize="44" Foreground="#FF6C6C6C" TextAlignment="Center" Grid.ColumnSpan="14" Grid.Row="12"><Run Text="Информация о "/><Run Text="Marathon Skills 2016"/></TextBlock>


        <Image HorizontalAlignment="Left" Height="97" Margin="296,470,0,0" Grid.Row="12" VerticalAlignment="Top" Width="178"/>
        <Image HorizontalAlignment="Center" Height="97" Margin="0,470,0,0" Grid.Row="12" VerticalAlignment="Top" Width="180"/>
        <Rectangle Grid.Row="12" Stroke="Black" Margin="247,241,17,166">
            <Rectangle.Fill>
                <ImageBrush ImageSource="marathon-skills-2016-marathon-map.jpg"/>
            </Rectangle.Fill>
        </Rectangle>
        <Button Name="btnCheck1" Content="1" Margin="847,250,36,751" Grid.Row="12" Click="btnCheck1_Click" FontSize="36">
