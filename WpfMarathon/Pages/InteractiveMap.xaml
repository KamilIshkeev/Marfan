                <ImageBrush/>
            </Button.Background>
        </Button>
        <Button Name="btnCheck6" Content="6" Margin="295,246,597,745" Grid.Row="12" Click="btnCheck6_Click" FontSize="36">
            <Button.BorderBrush>
                <ImageBrush/>
            </Button.BorderBrush>
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="txtCheckpoint" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Checkpoint" VerticalAlignment="Top" FontSize="36" FontWeight="Bold" Width="316" Grid.Column="12" Grid.Row="12" Height="60" Margin="145,255,0,0" Grid.ColumnSpan="2"/>
