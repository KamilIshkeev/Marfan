<Page x:Class="WpfMarathon.Pages.SponsorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d"
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="SponsorPage">

    <Grid Background="White">
        <!-- Верхняя панель с заголовком -->
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10">
                <TextBlock Text="MARATHON SKILLS 2016" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20"/>
            </StackPanel>
            <Button Content="Назад" Width="100" Height="30" FontSize="14" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </DockPanel>

        <!-- Основная часть формы -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Заголовок -->
                <RowDefinition Height="Auto"/>
                <!-- Информационный текст -->
                <RowDefinition Height="*"/>
                <!-- Основная форма -->
                <RowDefinition Height="Auto"/>
                <!-- Нижняя панель -->
            </Grid.RowDefinitions>

            <!-- Заголовок формы -->
            <TextBlock Grid.Row="0" Text="Спонсор бегуна" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,50,0,10"/>

            <!-- Информационный текст -->
            <TextBlock Grid.Row="1" Text="Пожалуйста, выберите бегуна, которого вы хотите спонсировать, и сумму, которую вы хотите пожертвовать. Спасибо за вашу поддержку бегунов и их благотворительных учреждений."
                       FontSize="16" HorizontalAlignment="Center" Margin="0,17,0,13" TextWrapping="Wrap" Width="1200"/>

            <!-- Основная форма -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Левая колонка -->
                    <ColumnDefinition Width="*" />
                    <!-- Правая колонка -->
                </Grid.ColumnDefinitions>

                <!-- Левая колонка: Информация о спонсоре -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Row="0" Text="Информация о спонсоре" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="20,20,0,10"/>

                    <!-- Ваше имя -->
                    <TextBlock Grid.Row="1" Text="Ваше имя:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <TextBox Grid.Row="1" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Ваше имя" Width="400" Height="35" FontSize="16" Margin="20,0,20,10"/>

                    <!-- Бегун -->
                    <TextBlock Grid.Row="2" Text="Бегун:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <ComboBox Grid.Row="2" Width="400" Height="35" FontSize="16" Margin="20,0,20,10">
                        <ComboBoxItem Content="Иван Прудов - 204 (Russia)"/>
                        <!-- Добавьте другие бегуны здесь -->
                    </ComboBox>

                    <!-- Владелец карты -->
                    <TextBlock Grid.Row="3" Text="Карта:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <TextBox Grid.Row="3" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Владелец карты" Width="400" Height="35" FontSize="16" Margin="20,0,20,10"/>

                    <!-- Номер карты -->
                    <TextBlock Grid.Row="4" Text="Номер карты:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <TextBox Grid.Row="4" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="1234 1234 1234 1234" Width="400" Height="35" FontSize="16" Margin="20,0,20,10"/>

                    <!-- Срок действия -->
                    <TextBlock Grid.Row="5" Text="Срок действия:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <StackPanel Grid.Row="5" Orientation="Horizontal" Margin="20,0,20,10">
                        <TextBox Width="60" Height="35" FontSize="16" Margin="0,0,10,0" Text="01"/>
                        <TextBox Width="80" Height="35" FontSize="16" Margin="0,0,0,0" Text="2017"/>
                    </StackPanel>

                    <!-- CVC -->
                    <TextBlock Grid.Row="6" Text="CVC:" VerticalAlignment="Center" Margin="20,0,10,10"/>
                    <TextBox Grid.Row="6" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="123" Width="100" Height="35" FontSize="16" Margin="20,0,20,10"/>
                </Grid>

                <!-- Правая колонка: Благотворительность -->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок -->
                    <TextBlock Grid.Row="0" Text="Благотворительность" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" Margin="20,20,0,10"/>

                    <!-- Фонд Кошек -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,20,10">
                        <TextBlock Text="Фонд Кошек" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    </StackPanel>

                    <!-- Сумма пожертвования -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20,0,20,10">
                        <TextBlock Text="Сумма пожертвования" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                            <Button Content="-" Width="50" Height="35" FontSize="16" Margin="0,0,5,0" Padding="10,0"/>
                            <TextBox Text="$50" Width="100" Height="35" FontSize="24" IsReadOnly="True" Margin="0,0,5,0"/>
                            <Button Content="+" Width="50" Height="35" FontSize="16" Margin="0,0,0,0" Padding="10,0"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Кнопки "Заплатить" и "Отмена" -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="20,20,20,20" HorizontalAlignment="Right">
                        <Button Content="Заплатить" Width="150" Height="40" FontSize="16" Margin="0,0,10,0" Padding="10,0" BorderBrush="Gray" BorderThickness="1"/>
                        <Button Content="Отмена" Width="150" Height="40" FontSize="16" Padding="10,0" BorderBrush="Gray" BorderThickness="1"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Нижняя панель -->
            <Grid Grid.Row="3" Background="#333333" Margin="0,20,0,0">
                <TextBlock Text="18 дней 8 часов и 17 минут до старта марафона!" Foreground="White" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10"/>
            </Grid>
        </Grid>
    </Grid>
</Page>