<Page x:Class="WpfMarathon.Pages.RegBegunPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="RegBegunPage">

    <Grid Background="White">
        <!-- Верхняя панель с заголовком -->
        <DockPanel Margin="10">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333333" Height="60" VerticalAlignment="Top">
                <Button Content="Назад" Width="120" Height="50" Foreground="White" Background="#555555" Margin="10,5,10,5" FontSize="22" />
                <TextBlock Text="MARATHON SKILLS 2016" FontSize="32" FontWeight="Bold" Foreground="White" Margin="10,5,0,5" />
            </StackPanel>
        </DockPanel>

        <!-- Основной контент -->
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="79*" />
                <RowDefinition Height="27*" />
            </Grid.RowDefinitions>
            <!-- Заголовок формы -->
            <TextBlock Text="Регистрация бегуна" FontSize="32" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,60,0,700" />

            <!-- Подпись к форме -->
            <TextBlock Text="Пожалуйста заполните всю информацию, чтобы зарегистрироваться в качестве бегуна" FontSize="20" Margin="20,118,20,20" Grid.RowSpan="2" />

            <!-- Главный Grid для размещения полей -->
            <Grid Grid.RowSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- Левая колонка -->
                    <ColumnDefinition Width="Auto" />
                    <!-- Правая колонка (для фото) -->
                </Grid.ColumnDefinitions>

                <!-- Левая часть формы -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Email -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,120,0,15">
                        <TextBlock Text="Email:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <TextBox Name="EmailBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                    </StackPanel>

                    <!-- Пароль -->
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Пароль:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <PasswordBox Name="PasswordBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                    </StackPanel>

                    <!-- Повтор пароля -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,15">
                        <TextBlock Text="Повторите пароль:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <PasswordBox Name="ConfirmPasswordBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                    </StackPanel>

                    <!-- Имя -->
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="0,0,0,15">
                        <TextBlock Text="Имя:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <TextBox Name="FirstNameBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                    </StackPanel>

                    <!-- Фамилия -->
                    <StackPanel Orientation="Horizontal" Grid.Row="4" Margin="0,0,0,15">
                        <TextBlock Text="Фамилия:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <TextBox Name="LastNameBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                    </StackPanel>

                    <!-- Пол -->
                    <StackPanel Orientation="Horizontal" Grid.Row="5" Margin="0,0,0,15">
                        <TextBlock Text="Пол:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <ComboBox Name="GenderComboBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20">
                            <ComboBoxItem Content="Мужской" />
                            <ComboBoxItem Content="Женский" />
                        </ComboBox>
                    </StackPanel>

                    <!-- Страна -->
                    <StackPanel Orientation="Horizontal" Grid.Row="6" Margin="0,0,0,15">
                        <TextBlock Text="Страна:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <ComboBox Name="CountryComboBox" Width="350" Height="60" Margin="15,0,0,0" FontSize="20">
                            <ComboBoxItem Content="Russia" />
                            <!-- Добавьте другие страны по необходимости -->
                        </ComboBox>
                    </StackPanel>

                    <!-- Дата рождения -->
                    <StackPanel Orientation="Horizontal" Grid.Row="7" Margin="0,0,772,15">
                        <TextBlock Text="Дата рождения:" Width="150" VerticalAlignment="Center" FontSize="20" />
                        <DatePicker Name="BirthDatePicker" Width="350" Height="60" Margin="15,0,0,0" FontSize="20" />
                        <!-- Календарная иконка -->
                    </StackPanel>
                </Grid>

                <!-- Правая часть формы (фото) -->
                <Grid Grid.Column="1" Margin="20,102,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Место для фото -->
                    <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="5" Grid.Row="0" Margin="192,174,72,412">
                        <Image  Stretch="UniformToFill" Width="220" Height="220" />
                    </Border>

                    <!-- Надпись "Фото" -->
                    <TextBlock Text="Фото файл:" HorizontalAlignment="Left" Margin="34,501,0,355" FontSize="20" />

                    <!-- Поле для пути к файлу фото -->
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,15">
                        <TextBox Name="PhotoFilePathBox" Width="350" Height="60" Margin="0,0,15,0" Text="Photo_logo.jpg" FontSize="20" />
                        <Button Content="Просмотр..." Width="220" Height="60" Margin="0,0,0,0" FontSize="20" />
                    </StackPanel>
                </Grid>
            </Grid>

            <!-- Кнопки "Регистрация" и "Отмена" -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,758,0,0" Grid.RowSpan="2">
                <Button Content="Регистрация" Width="220" Height="60" Margin="15,0,15,0" FontSize="20" />
                <Button Content="Отмена" Width="220" Height="60" Margin="15,0,15,0" FontSize="20" />
            </StackPanel>

        </Grid>
    </Grid>
</Page>