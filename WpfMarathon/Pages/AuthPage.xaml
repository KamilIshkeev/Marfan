<Page x:Class="WpfMarathon.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AuthPage">

    <Grid Background="white">
        <!-- Верхняя панель с заголовком -->
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10">
                <TextBlock Text="MARATHON SKILLS 2016" Foreground="White" FontSize="36" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,20"/>
            </StackPanel>
        </DockPanel>

        <!-- Основная часть формы -->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Заголовок формы -->
            <TextBlock Grid.Row="0" Text="Форма авторизации" FontSize="56" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,150,0,7"/>

            <!-- Информационный текст -->
            <TextBlock Grid.Row="1" Text="Пожалуйста, авторизуйтесь в системе, используя ваш адрес электронной почты и пароль." 
                       FontSize="44" HorizontalAlignment="Center" Margin="0,17,0,13" TextWrapping="Wrap" Width="1658" TextAlignment="Center"/>

            <!-- Поле Email -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,170,0,9" HorizontalAlignment="Center" Width="722" Grid.RowSpan="2">
                <TextBlock Text="Email:" FontSize="44" Width="121" VerticalAlignment="Center"/>
                <TextBox x:Name="EmailTextBox" Style="{StaticResource PlaceholderTextBoxStyle}" Tag="Введите свой Email адрес" Width="600" Height="70" FontSize="14" Margin="10,0,0,0" Padding="5" TextBlock.FontSize="44" />

            </StackPanel>

            <!-- Поле Password -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,30,0,15" HorizontalAlignment="Center" Width="722">
                <TextBlock Text="Password:" FontSize="45" Width="205" VerticalAlignment="Center"/>
                <PasswordBox x:Name="PasswordBox"  Width="507" Height="70" FontSize="14" Margin="10,0,0,0" TextBlock.FontSize="44" />
            </StackPanel>

            <!-- Кнопки Login и Cancel -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" Margin="0,140,0,360" HorizontalAlignment="Center" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.796">
                <Button Content="Login" Width="195" Height="100" FontSize="16" Margin="0,0,10,0" Padding="10,0" TextBlock.FontSize="44" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>

                </Button>
                <Button Content="Cancel" Width="195" Height="100" FontSize="16" Padding="10,0" TextBlock.FontSize="44" >
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>



</Page>
