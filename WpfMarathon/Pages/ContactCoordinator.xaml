<Page x:Class="WpfMarathon.Pages.ContactCoordinator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="ContactCoordinator">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="212.146"/>
            <ColumnDefinition Width="149.854"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Верхняя панель с заголовком -->
        <DockPanel LastChildFill="False" Margin="0,0,0,189" Grid.RowSpan="2" Grid.ColumnSpan="4">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10" Width="1919">
                <Button x:Name="Back_btn" Content="Назад" Width="150" Height="55" FontSize="36" Margin="50,0,0,0"  />
                <TextBlock Text="MARATHON SKILLS 2025" Foreground="White" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,20,0,20"/>
                <Button Content="Logout" Width="198" Height="55" FontSize="36" Margin="650,0,0,0"  />
            </StackPanel>
        </DockPanel>
        <TextBlock HorizontalAlignment="Left" Margin="304,180,0,0" TextWrapping="Wrap" Text="Контакты" VerticalAlignment="Top" FontSize="44" Grid.Column="1" Width="212" Height="70" Grid.Row="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,50,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Для получения дополнительной информации пожалуйста свяжитесь с координаторами" VerticalAlignment="Top" Width="770" FontSize="36" Height="122" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,210,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Телефон: " VerticalAlignment="Top" Width="197" FontSize="36" FontWeight="Bold" Height="61" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="28,316,0,0" Grid.Row="2" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="197" FontSize="36" FontWeight="Bold" Height="61" Grid.Column="1"/>
        <TextBlock x:Name="txt_tel" Grid.Column="1" HorizontalAlignment="Left" Margin="181,210,0,0" Grid.Row="2" TextWrapping="Wrap" Text="+55 11 9988 7766" VerticalAlignment="Top" Width="581" FontSize="36" Height="61"/>
        <TextBlock Name="txt_email" Grid.Column="1" HorizontalAlignment="Left" Margin="161,316,0,0" Grid.Row="2" TextWrapping="Wrap" Text="coordinators@marathonskills.org" VerticalAlignment="Top" Width="613" FontSize="36" Height="61"/>

    </Grid>
</Page>
