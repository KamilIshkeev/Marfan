<Page x:Class="WpfMarathon.Pages.ContactCoordinator"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="ContactCoordinator">

    <Grid Background="white">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="212.146"/>
            <ColumnDefinition Width="149.854"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="82"/>
            <RowDefinition Height="250"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="9,37,0,0" TextWrapping="Wrap" Text="Контакты" VerticalAlignment="Top" FontSize="24" Grid.Column="2" Width="107"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="55,30,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Для получения дополнительной информации пожалуйста свяжитесь с координаторами" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="361" FontSize="16"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="55,86,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Телефон: " VerticalAlignment="Top" Width="92" FontSize="16" FontWeight="Bold"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="55,123,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top" Width="92" FontSize="16" FontWeight="Bold"/>
        <TextBlock x:Name="txt_tel" Grid.Column="1" HorizontalAlignment="Left" Margin="127,86,0,0" Grid.Row="1" TextWrapping="Wrap" Text="+55 11 9988 7766" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="272" FontSize="16"/>
        <TextBlock Name="txt_email" Grid.Column="1" HorizontalAlignment="Left" Margin="117,123,0,0" Grid.Row="1" TextWrapping="Wrap" Text="coordinators@marathonskills.org" VerticalAlignment="Top" Grid.ColumnSpan="3" Width="288" FontSize="16"/>

    </Grid>
</Page>
