<Page x:Class="WpfMarathon.Pages.AuthRegRunner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfMarathon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="AuthRegRunner">
    <Grid Background="White">
        <!-- Верхняя панель с заголовком -->
        <DockPanel LastChildFill="False">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Background="#333333" Margin="0,0,0,10">
                <Button Content="Назад" Width="150" Height="55" FontSize="36" Margin="50,0,0,0" Click="Back_btn_Click">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <TextBlock Text="MARATHON SKILLS 2025" Foreground="White" FontSize="56" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="160,20,0,20"/>
            </StackPanel>
        </DockPanel>
        <!-- Кнопка "Я участвовал ранее" -->
        <Button Name="btn_oldrunner"
                Content="Я участвовал ранее"
                Background="#FFF2F2F2"
                FontFamily="Arial"
                FontSize="55"
                Foreground="#FF474747"
                Height="175"
                Width="910"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,290,0,0"
                FontStyle="Italic"
                Click="btn_oldrunner_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="35"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Кнопка "Я новый участник" -->
        <Button Name="btn_newrunner"
                Content="Я новый участник"
                Background="#FFF2F2F2"
                FontFamily="Arial"
                FontSize="55"
                Foreground="#FF474747"
                Height="175"
                Width="910"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,510,0,0"
                FontStyle="Italic"
                Click="btn_newrunner_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="35"/>
                </Style>
            </Button.Resources>
        </Button>

        <!-- Кнопка Login -->
        <Button x:Name="btn_Login"
                Content="Login"
                Background="#FFF2F2F2"
                FontFamily="Open Sans Light"
                FontSize="35"
                Foreground="#FF474747"
                Width="292"
                Height="90"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Margin="0,0,50,170"
                Click="btn_Login_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>