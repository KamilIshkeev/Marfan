<Window x:Class="WpfMarathon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfMarathon"
        mc:Ignorable="d"
           Title="MainWindow" Height="1080" Width="1920">
    <Grid>

        <Frame x:Name="MainFrame"/>
        <!-- Подвал с таймером -->
        <DockPanel LastChildFill="False">
            <StackPanel DockPanel.Dock="Bottom" Background="#333333" Height="115">
                <TextBlock x:Name="TimeStart" Text="" Foreground="White" FontSize="20" HorizontalAlignment="Center" Background="#333333" Margin="0,995,0,0" />
            </StackPanel>
        </DockPanel>
        
    </Grid>
</Window>
